<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/recipeListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="de.stuttgart.syzl3000.movies.MovieListFragment"
        android:label="MovieListFragment" >
        <action
            android:id="@+id/viewMovie"
            app:destination="@id/movieFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieFragment"
        android:name="de.stuttgart.syzl3000.movies.MovieFragment"
        android:label="MovieFragment" />

    <fragment
        android:id="@+id/recipeListFragment"
        android:name="de.stuttgart.syzl3000.presentation.ui.recipeList.RecipeListFragment"
        android:label="RecipeListFragment">
        <action
            android:id="@+id/viewRecipe"
            app:destination="@id/recipeFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeFragment"
        android:name="de.stuttgart.syzl3000.presentation.ui.recipe.RecipeFragment"
        android:label="RecipeFragment" />
</navigation>